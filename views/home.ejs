  <section id="middle">

    <div class="row">

      <div class="col-lg-3 col-md-6 ss">
        <div class="card">
          <div class="card-header bg-dark text">
            <h3>Stocks</h3>
          </div>
          <div class="card-body">
            <form action="stockSelect" method="post">
              <label> <input type="radio" value="1" name="stocks" class="yo">Stock 1 </label><br>
              <label> <input type="radio" value="2" name="stocks" class="yo">Stock 2 </label><br>
              <label> <input type="radio" value="3" name="stocks" class="yo">Stock 3 </label><br>
              <label> <input type="radio" value="4" name="stocks" class="yo">Stock 4 </label><br>
              <label> <input type="radio" value="5" name="stocks" class="yo">Stock 5 </label><br>
              <label> <input type="radio" value="6" name="stocks" class="yo">Stock 6 </label><br>
              <label> <input type="radio" value="7" name="stocks" class="yo">Stock 7 </label><br>
              <label> <input type="radio" value="8" name="stocks" class="yo">Stock 8 </label><br>
              <label> <input type="radio" value="9" name="stocks" class="yo">Stock 9 </label><br>
              <label> <input type="radio" value="10" name="stocks" class="yo">Stock10 </label><br>
              <button type="submit" id="confirm" class="btn btn-block btn-outline-dark btn-lg"> Confirm</button>
            </form>
          </div>
        </div>
      </div>

      <div class="col-lg-4 col-md-6 ss">
        <!-- <div class="alert warning">
          <strong> Warning!</strong> The invested amount should be less than the capital earned in the previous rounds.
        </div> -->

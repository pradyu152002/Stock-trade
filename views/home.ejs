  <script>
    var startTime,endTime,timeelapsed;
    function investAlert(){
      if(Number(document.getElementById("invest").value)>10000){
        alert("Cannot invest due to capital deficit");
      }else{
        startTime = new Date().getTime();
        alert("Are you sure to go ahead with the investment? ");

      }

       // alert(Number(document.getElementById("invest").value)+2);

    }

    function sellAlert(){
      endTime = new Date().getTime();

      timeelapsed = endTime-startTime;
      timeelapsed /= 1000;

      if(timeelapsed<10){
        alert("Cannot sell within 10 seconds of investment");
      }
      // alert("Are you sure you want to sell?");
    }
  </script>


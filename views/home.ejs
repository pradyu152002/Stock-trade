          <div class="card-header bg-dark text">
            <h3>Trade</h3>
          </div>
          <div class="card-body">

            <div class="cool">
              <form class="" action="buy" method="post">
                <label for="Investment" class="sr-only">Limit</label>

                <input type="Investment" id="invest" name="investmentAmount" class="form-control " placeholder="Invest">
                <button class="btn btn-dark k" id="investmentButton" onclick="investAlert()">INVEST</button>
              </form>
              <form class="" action="sell" method="post">
                 <button type="submit" id="sellButton" class="btn btn-dark k" onclick="sellAlert()">SELL</button>
              </form>
            </div>
            <br>




          </div>

  </section>










